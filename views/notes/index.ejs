<%- include('../components/header', { title: title }) %>
    <form id="modal" class="modal"  method="POST" action="/notes">
        <div class="modal-background" onclick="closeModal()"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Add new note</p>
                <button class="delete" aria-label="close" onclick="closeModal()"></button>
            </header>
            <section class="modal-card-body">
                <div class="field">
                  <p class="control has-icons-left">
                    <input class="input is-medium" type="text" placeholder="Note title" name="title">
                    <span class="icon is-small is-left">
                      <i class="fas fa-note-sticky"></i>
                    </span>
                  </p>
                </div>
                <div class="control">
                  <textarea
                    class="textarea is-hovered is-medium"
                    placeholder="Note content"
                    name="content"
                  ></textarea>
                </div>
            </section>
            <footer class="modal-card-foot is-flex">
                <button type="submit" class="button is-success mr-2">Add</button>
                <span class="button" onclick="closeModal()">Cancel</span>
            </footer>
        </div>
        </form>

<div class="columns is-multiline is-variable is-5 pl-5 pr-5 pt-2 pb-2">
  <% if (!notes || notes.length === 0) { %>
    <p>No notes yet.</p>
  <% } else { %>
    <% notes.forEach(note => { %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"><%= note.title %></p>
            <button class="card-header-icon" aria-label="more options">
              <span class="icon">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </header>
          <div class="card-content">
            <div class="content">
              <%= note.content %>
              <br />
              <time datetime="2016-1-1"><%= note.createdAt %></time>
            </div>
          </div>
          <footer class="card-footer">
            <a href="/notes/edit/<%= note.id %>" class="card-footer-item has-text-info">Edit</a>
            <form class="card-footer-item" method="post" action="/notes/delete/<%= note.id %>?_method=DELETE">
                <button type="submit" class="has-text-danger">Delete</button>
            </form>
          </footer>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>


<%- include('../components/footer') %>
